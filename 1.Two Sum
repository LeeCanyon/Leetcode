class Solution {
public:
    vector<int> twoSum(vector<int>& nums, int target) {
        vector<int>ret;
        unordered_map<int,int> num_indice;
        for(int i=0;i<nums.size();++i){
            if(num_indice.end()==num_indice.find(target-nums[i]))
            {
                num_indice.insert({nums[i],i});
            }    
            else
            {
                ret.push_back(num_indice.find(target-nums[i])->second);
                ret.push_back(i);
                break;
            }
        }
        return ret;
    }
};
